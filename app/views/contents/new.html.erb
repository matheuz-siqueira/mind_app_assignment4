<h1>New Content</h1>

<%= form_with model: @content do |form| %>
  <div class='field'>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: 'Title'%>
  </div>

  <div class='field'>
    <%= form.label :description %>
    <%= form.text_area :description, placeholder: 'Something content...'%>
  </div>

  <div class="actions">
    <%= form.submit 'Save' %>
  </div>

<% end %>