<h1 class="text-center">Cloud Tags</h1>

<div style="width: 900px; text-align: justify;">
  <% @tags_data.each do |tag_name, count|%>
    <% font_size = count * 20 %>
    <span style="font-size: <%= font_size > 70 ? 70 : font_size %>px;">
      <%= link_to tag_name, contents_path(tags: [tag_name]), style: 'text-decoration: none;' %>
    </span>
  <% end %>
<div> 


<% if @tags_data.present? %> 
  <div class="position-fixed bottom-2 ">
    <p>
      <button class="btn" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWidthExample" aria-expanded="false" aria-controls="collapseWidthExample">
        <i class="bi bi-arrow-90deg-right"></i>
      </button>
    </p>
    <div style="min-height: 120px;">
      <div class="collapse collapse-horizontal" id="collapseWidthExample">
        <div class="card card-body" style="width: 300px;">
          tags will increase in size as you associate them with more content!
        </div>
      </div>
    </div>
  </div>
<% else %>
  Start taking your notes!
<% end %>
